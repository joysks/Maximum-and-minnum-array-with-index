#include <iostream>
using namespace std;

int main() {
  int n,arr[100];
  int i;
  int maxvalu=arr[0];
   int minvalu=arr[0];
  int maxind=0;
  int minind=0;
 cout<<"Input the array size"<<endl;

  cin>>n;
  cout<<"Input the 1st array elment"<<endl;
  for(i=1;i<=n;i++)
  {

    cin>>arr[i];
    
    }
  for(i=1;i<=n;i++){
   if(arr[i]>maxvalu){

     maxvalu=arr[i];
     maxind=i;
   }
   
     if(arr[i]<minvalu){

       minvalu=arr[i];
       minind=i;
       
     }

    
      }
  
  cout<<"Maxvalue="<<maxvalu<<"index="<<maxind<<endl;
  cout<<"minvalue="<<minvalu<<"index="<<minind<<endl;
  
  }
